rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images d'événements: lecture publique, écriture par le propriétaire authentifié
    match /events/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Par défaut: accès réservé aux utilisateurs authentifiés
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
} 